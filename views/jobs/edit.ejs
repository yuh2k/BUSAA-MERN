<div class="data-form">
    <form method="POST" action="<%=`/jobs/${job._id}/update?_method=PUT`%>">
      <h2>Edit job</h2>
        <div>
          <label for="title">Title:</label>
          <input type="text" name="title" id="title" value="<%= job.title %>" required>
        </div>
        <div>
          <label for="company">Company:</label>
          <input type="text" name="company" id="company" value="<%= job.company %>" required>
        </div>
        <div>
          <label for="location">Location:</label>
          <input type="text" name="location" id="location" value="<%= job.location %>" required>
        </div>
        <div>
          <label for="description">Description:</label>
          <input name="description" id="description" rows="4" cols="50" value="<%= job.description %>" required></input>
        </div>
        <div>
          <label for="requirements">Requirements:</label>
          <input name="requirements" id="requirements" rows="4" cols="50" value="<%= job.requirements %>" required></input>
        </div>
        <div>
          <label for="salary">Salary:</label>
          <input type="number" name="salary" id="salary" value="<%= job.salary %>" required>
        </div>
        <div>
          <label for="contactEmail">Contact Email:</label>
          <input type="email" name="contactEmail" id="contactEmail" value="<%= job.contactEmail %>" required>
        </div>
        <div>
          <label for="contactPhone">Contact Phone:</label>
          <input type="tel" name="contactPhone" id="contactPhone" pattern="[0-9]{10}" value="<%= job.contactPhone %>" required>
        </div>
        <div>
          <label for="deadlineDate">Deadline Date:</label>
          <input type="date" name="deadlineDate" id="deadlineDate" value="<%= job.deadlineDate.toISOString().split('T')[0] %>" required>
        </div>
        <div>
          <button type="submit">Save</button>
        </div>
      
    </form>
  </div>