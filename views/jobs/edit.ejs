<div class="data-form">
    <br>
    <p class="center-title">Edit Job - <%= job.title %></p>
    <form method="POST" action="<%=`/jobs/${job._id}/update?_method=PUT`%>">
      <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" required value="<%= job.title %>">
      </div>
      <div>
        <label for="company">Company:</label>
        <input type="text" name="company" id="company" required value="<%= job.company %>">
      </div>
      <div>
        <label for="location">Location:</label>
        <input type="text" name="location" id="location" required value="<%= job.location %>">
      </div>
      <div>
        <label for="description">Description:</label>
        <input type="text" name="description" id="description" rows="4" cols="50" required value="<%= job.description %>"></input>
      </div>
      <div>
        <label for="requirements">Requirements:</label>
        <input type="text" name="requirements" id="requirements" rows="4" cols="50" required value="<%= job.requirements %>"></input>
      </div>
      <div>
        <label for="salary">Salary(per hour):</label>
        <input type="number" name="salary" id="salary" required value="<%= job.salary %>">
      </div>
      <div>
        <label for="contactEmail">Contact Email:</label>
        <input type="email" name="contactEmail" id="contactEmail" required value="<%= job.contactEmail %>">
      </div>
      <div>
        <label for="contactPhone">Contact Phone:</label>
        <input type="tel" name="contactPhone" id="contactPhone" pattern="[0-9]{10}" required value="<%= job.contactPhone %>">
      </div>
      <div>
        <label for="postDate">Post Date:</label>
        <input type="date" name="postDate" id="postDate" required value="<%= job.postDate.toISOString().substring(0, 10) %>">
      </div> 
      <div>
        <label for="deadlineDate">Deadline Date:</label>
        <input type="date" name="deadlineDate" id="deadlineDate" required value="<%= job.deadlineDate.toISOString().substring(0, 10) %>">
      </div>
      <div></div>
      <button type="submit" class="btn btn-secondary">Submit</button>
    </form>
  </div>