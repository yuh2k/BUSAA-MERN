    <title>Brandeis Students and Alumni Association</title>
  </head>
  <body>

    <header>
        <img class="logo" src="/images/BrandeisLogo.png" alt="Logo">
        <div class="title-container">
            <h1 class="big-title">Brandeis University</h1>
            <h2 class="subtitle">Students and Alumni Association</h2>
        </div>
    </header>
    

    <nav class="navbar navbar-expand-lg navbar-light bg-blue flex-row">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
  
      <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/jobs">Jobs</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/events">Events</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/chat">Chat</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact</a>
            </li>
          </ul>
      </div>
          
      <ul class="navbar-nav navbar-right">
          <% if (!loggedIn) { %>
              <li class="nav-item">
                  <a class="nav-link btn btn-success btn-outline-primary mr-3" href="/users/login"><b>Log in</b></a>
              </li>
              <li>
                  <a class="nav-link btn btn-success btn-outline-primary mr-3" href="/users/new"><b>Sign up</b></a>
              </li>
          <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/users/<%= currentUser.id %>"><b><u><%= currentUser.name %></u></b></a>
              </li>
              <li><p>&nbsp;&nbsp;&nbsp;&nbsp;</p></li>
              <li>
                  <a class="nav-link btn btn-danger btn-outline-primary" href="/users/logout"><b>Log out</b></a>
              </li>
          <% } %>
      </ul>
  </nav>
  

    <div class="flashes">
      <% if (flashMessages) { %> <% if (flashMessages.success) { %>
      <div class="flash success"><%= flashMessages.success %></div>
      <%} else if (flashMessages.error){ %>
      <div class="flash error"><%= flashMessages.error %></div>
      <%} %> <%} %>
    </div>
    <main>

        <%- body%>
    </main>
    <footer>
      <p>
        <a href="https://www.youtube.com/@brandeis">
            <img src="https://upload.wikimedia.org/wikipedia/commons/0/09/YouTube_full-color_icon_%282017%29.svg" 
            height = 12px width = 16px href = "https://www.linkedin.com/in/hy22/" alt="YouTube">
        </a>
        <a href="https://www.facebook.com/brandeisuniversity">
            <img src="https://cdn-icons-png.flaticon.com/512/145/145802.png" 
            height = 15px width = 15px  alt="Facebook">
        </a>
        <a href="https://www.linkedin.com/school/brandeis-university/">
            <img src="https://cdn-icons-png.flaticon.com/512/174/174857.png"
            height = 15px width = 15px  alt="Linkedin">
        </a>
        <a href="https://www.instagram.com/brandeisuniversity/">
            <img src="https://cdn4.iconfinder.com/data/icons/social-media-2210/24/Instagram-1024.png"
            height = 15px width = 15px  alt="Instagram">
        </a>
        <a href="https://twitter.com/BrandeisU">
            <img src="https://cdn0.iconfinder.com/data/icons/shift-free/32/Twitter-1024.png"
            height = 15px width = 15px  alt="twitter">
        </a>
        <br>
        Copyright &copy; 2023 Brandeis University
      </p>
    </footer>


