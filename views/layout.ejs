<html>
  <head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/style.css"/>
    <title>Brandeis Students and Alumni Association</title>
  </head>
  <body>
    <header>
        <img src="/image/BrandeisLogo.png" alt="Brandeis Logo" class="headlogo"/>
        <div id="head">
            <h1 class="name">Brandeis University</h1>
            <h2 class="saa">Students and Alumni Association</h2>
        </div>
    </header>
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/jobs">Jobs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/chat">Chat</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/users/new">Sign Up</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/login">Sign In</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/users/<%= user.id %>"><%= user.name %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/logout">Log Out</a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>
    
    <div class="flashes">
      <% if (flashMessages) { %> <% if (flashMessages.success) { %>
      <div class="flash success"><%= flashMessages.success %></div>
      <%} else if (flashMessages.error){ %>
      <div class="flash error"><%= flashMessages.error %></div>
      <%} %> <%} %>
    </div>
    <main>
        <%- body %>
    </main>
    <footer>
        <p>
            &copy; 2023 Brandeis University
            <a href="https://www.facebook.com/brandeisuniversity">
                <img src="https://cdn-icons-png.flaticon.com/512/145/145802.png" height = 15px width = 15px alt="Facebook">
            </a>
            <a href="https://www.instagram.com/brandeisuniversity/">
                <img src="https://cdn4.iconfinder.com/data/icons/social-media-2210/24/Instagram-1024.png"height = 15px width = 15px alt="Instagram">
            </a>
            <a href="https://www.linkedin.com/school/brandeis-university/">
                <img src="https://cdn-icons-png.flaticon.com/512/174/174857.png"height = 15px width = 15px alt="Linkedin">
            </a>
            <a href="https://www.youtube.com/@brandeis">
                <img src="https://upload.wikimedia.org/wikipedia/commons/0/09/YouTube_full-color_icon_%282017%29.svg" height = 12px width = 16px href = "https://www.linkedin.com/in/hy22/" alt="YouTube">
            </a>
            <a href="https://twitter.com/BrandeisU">
                <img src="https://cdn0.iconfinder.com/data/icons/shift-free/32/Twitter-1024.png"height = 15px width = 15px alt="twitter">
            </a>
        </p>
    </footer>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/js/chat.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>