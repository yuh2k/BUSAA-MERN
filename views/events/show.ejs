<!DOCTYPE html>
<html>
  <head>
    <title><%= event.title %></title>
  </head>
  <body>
    <h1><%= event.title %></h1>
    <table>
      <tr>
        <th>Title</th>
        <td><%= event.title %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= event.description %></td>
      </tr>
      <tr>
        <th>Location</th>
        <td><%= event.location %></td>
      </tr>
      <tr>
        <th>Organizer</th>
        <td><%= event.organizer.name %></td>
      </tr>
      <tr>
        <th>Attendees</th>
        <td>
          <% event.attendees.forEach(function(attendee, index) { %>
            <%= attendee.name %><%= index !== event.attendees.length - 1 ? ',' : '' %>
          <% }); %>
        </td>
      </tr>
      <tr>
        <th>Is Online</th>
        <td><%= event.isOnline ? 'Yes' : 'No' %></td>
      </tr>
      <tr>
        <th>Start Date</th>
        <td><%= event.startDate.toDateString() %></td>
      </tr>
      <tr>
        <th>End Date</th>
        <td><%= event.endDate.toDateString() %></td>
      </tr>
      <tr>
        <th>Registration Link</th>
        <td><a href="<%= event.registrationLink %>"><%= event.registrationLink %></a></td>
      </tr>
    </table>

    <div>
      <a href="/events">View all events</a>
    </div>
    <div>
      <a  href="<%=`/events/${event._id}/edit`%>">Edit event details</a>
    </div>

    <div>
      <a href="<%= `/events/${event._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this event?')">Delete</a>
    </div>
  </body>
</html>
